{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": false,
        "typeRoots": ["./node_modules/@types",".src/types"]
    },

    "include": [
        "src/**/*.ts",
        "src/types/**/*"
    ],
    "exclude": [
        "node_modules"]
   
}